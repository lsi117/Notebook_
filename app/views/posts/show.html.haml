#post_show
  %h1= @post.title
  %p.username
    Shared by:
    = @post.user.name
    = time_ago_in_words(@post.created_at)
    ago
  .clearfix
    .post_image_description
      = image_tag @post.image.url(:medium)
      .description= simple_format(@post.description)
    .post_data
      = link_to @post.title, @post.link
      .fa.fa-link
      = link_to like_post_path(@post), method: :get, class: "data" do
        %i.fa.fa-thumbs-o-up
        = pluralize(@post.get_upvotes.size, "Like")
      = link_to dislike_post_path(@post), method: :get, class: "data" do
        %i.fa.fa-thumbs-o-down
        = pluralize(@post.get_downvotes.size, "Dislike")
      %p.data
        %i.fa.fa-comments-o
        = pluralize(@post.comments.count, "Comment")
      - if @post.user == current_user
        = link_to "Edit", edit_post_path, class: "data"
        = link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?" }, class: "data"
    #random_post
      .post
        .post_image
      - if @random_post == nil
        %h2 No other notes here, yet! Create more notes.
      - else
        %h2 Check out these other notes!
        = link_to (image_tag @random_post.image.url(:thumb)), post_path(@random_post)
        .post_content
          .title
            %h2= link_to @random_post.title, post_path(@random_post)
            .data.clearfix
              %p.username
                Shared by:
                = @random_post.user.name
              %p.buttons
                %span
                  %span
                  %i.fa.fa-comments-o
                    = @random_post.comments.count
                  %span
                    %i.fa.fa-thumbs-o-up
                    = @random_post.get_likes.size
                  %span
                    %i.fa.fa-thumbs-o-down
                    = @random_post.get_dislikes.size



#comments
  %h2.comment_count= pluralize(@post.comments.count, "Comment")
  - @comments.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content

= render 'comments/form'

